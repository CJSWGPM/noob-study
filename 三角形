#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main()
{
	int n;
	int j;
	int i;
	int k;
	printf("请输入一个数字：");
	scanf("%d", &n);

	for (i = 0; i <= n; i++)
	{

		for (j = 0; j <=n- i; j++)
		{
			printf(" ");
		}
		for (int k = 0; k <= i * 2; k++)
		{
			printf("*");
		}
		printf("\n");

	}

	return 0;
}
